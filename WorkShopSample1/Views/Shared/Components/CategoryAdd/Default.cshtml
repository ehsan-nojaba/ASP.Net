@model Shopping.DomainModel.DTO.Category.CategoryAddModel

<h4>CategoryAddModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Default" id="frmAddNew">
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MenuIcon" class="control-label"></label>
                <input asp-for="MenuIcon" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Slug" class="control-label"></label>
                <input asp-for="Slug" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ParentId" class="control-label"></label>
                <select asp-for="ParentId" asp-items="@ViewBag.ctr"></select>
            </div>
            <div class="form-group">
                <a class="btn btn-secondary" id="btnAdd" data-form-id="frmAddNew" data-action="@Url.Action("AddNew","Category")" data-method="post">Add</a>
            </div>
        </form>
    </div>
</div>